<%= form_for(@user, url: admin_user_path(@user), html: {class: "form-horizontal", role:"form"}) do |f| %>
  <section class="panel">
    <header class="panel-heading">
      <h2 class="panel-title">Edit User</h2>
    </header>
    <div class="panel-body">
      <div class="col-md-offset-2 col-md-8">
        <div class="form-group">
          <label class="col-sm-3 control-label">User Name</label>
          <div class="col-sm-9">
            <%= f.text_field :username, class: 'form-control', required:'true', disabled: 'disabled', placeholder:'' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">Email</label>
          <div class="col-sm-9">
            <%= f.text_field :email, class: 'form-control', required:'true', placeholder:'' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">Password</label>
          <div class="col-sm-9">
            <%= f.text_field :jasmin_password, class: 'form-control', required:'true', placeholder:'', minlength: 6, maxlength: 8 %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">Senders</label>
          <div class="col-sm-9">
            <textarea name="senders" rows="5" class="form-control" placeholder="Type your senders..."><% @user.senders.each do |sender| %><%= sender.name + "\r\n" %><% end %></textarea>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">Sms Count</label>
          <div class="col-sm-9">
            <%= f.text_field :sms_count, class: 'form-control', required:'true', placeholder:'' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">Role</label>
          <div class="col-sm-9">
            <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label"></label>
          <div class="col-sm-9">
            <%= f.submit 'Update', class: 'btn btn-primary' %>
            <%= link_to 'Back',  admin_users_path , class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
